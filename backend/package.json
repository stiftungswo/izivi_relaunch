{
  "name": "izivi-backend",
  "version": "0.0.1",
  "private": true,
  "author": "",
  "license": "ISC",
  "scripts": {
    "dev": "UI_ENDPOINT=http://localhost:3000 BABEL_DISABLE_CACHE=1 meteor -p 3010"
  },
  "dependencies": {
    "apollo-client": "^1.0.4",
    "babel-runtime": "6.23.0",
    "bcrypt": "^1.0.2",
    "body-parser": "^1.17.1",
    "cors": "^2.8.3",
    "express": "^4.15.2",
    "graphql": "^0.9.3",
    "graphql-loader": "^1.2.0",
    "graphql-server-express": "^0.7.2",
    "graphql-tools": "^0.11.0",
    "lodash": "^4.17.4",
    "paginated-graphql": "^1.1.3",
    "simpl-schema": "^0.2.3"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "babel-plugin-inline-import": "^2.0.4",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-env": "^1.4.0",
    "babel-preset-stage-2": "^6.24.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.1.3",
    "eslint-import-resolver-meteor": "^0.4.0",
    "eslint-plugin-graphql": "^0.7.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-meteor": "^4.0.1"
  },
  "babel": {
    "presets": [
      "env",
      "stage-2"
    ],
    "plugins": [
      "transform-decorators-legacy",
      "babel-plugin-inline-import"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "sourceType": "module",
      "allowImportExportEverywhere": true,
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true
      }
    },
    "plugins": [
      "meteor",
      "import",
      "graphql"
    ],
    "extends": [
      "airbnb-base",
      "plugin:meteor/recommended"
    ],
    "globals": {
      "server": false,
      "browser": false,
      "expect": false
    },
    "env": {
      "node": true,
      "browser": true,
      "es6": true
    },
    "settings": {
      "import/core-modules": [
        "meteor/*"
      ],
      "import/resolver": {
        "meteor": {
          "extensions": [
            ".jsx",
            ".js"
          ]
        }
      }
    },
    "rules": {
      "new-cap": [
        2,
        {
          "capIsNewExceptions": [
            "Maybe",
            "ReactiveAggregate"
          ]
        }
      ],
      "import/no-extraneous-dependencies": 0,
      "import/extensions": [
        "off",
        "never"
      ],
      "no-underscore-dangle": [
        "error",
        {
          "allow": [
            "__",
            "_id",
            "_ensureIndex",
            "_verifyEmailToken",
            "_resetPasswordToken",
            "_name"
          ]
        }
      ]
    }
  }
}
